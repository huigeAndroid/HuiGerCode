<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LikeView">
        <attr name="likeViewCirRadius" format="dimension"/>
        <attr name="likeViewCirTime" format="integer"/>
        <attr name="likeViewDefaultColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="TabScrollView">
        <attr name="tabTitleSize" format="dimension"/>
        <attr name="tabTitleSelColor" format="color"/>
        <attr name="tabTitleUnSelColor" format="color"/>
        <attr name="tabTitlePaddingLR" format="dimension"/>
        <attr name="tabTitlePaddingAsLine" format="dimension"/>
        <!--指示器显示状态-->
        <attr name="tabTitleLineVisible" format="enum">
            <enum name="GONE" value="-1"/>
            <enum name="VISIBLE" value="1"/>
        </attr>
        <!--指示器颜色-->
        <attr name="tabTitleLineBgColor" format="color"/>
    </declare-styleable>

    <!--加载-->
    <declare-styleable name="LoadingView">
        <!--主题色-->
        <attr name="loadingViewColor" format="color"/>
        <!--动画时长-->
        <attr name="loadingViewDuration" format="integer"/>
    </declare-styleable>

    <!--流光字-->
    <declare-styleable name="TextFlickerView">
        <!--动画时长-->
        <attr name="animatorDuration" format="integer"/>
        <!--流光颜色-->
        <attr name="flickerColor" format="color"/>
    </declare-styleable>

    <!--个人中心的item-->
    <declare-styleable name="ItemLayout">
        <!--左边图标-->
        <attr name="itemLeftImg" format="reference"/>
        <attr name="itemLeftImgSize" format="dimension"/>
        <!--文字-->
        <attr name="itemText" format="string"/>
        <attr name="itemTextSize" format="dimension"/>
        <attr name="itemTextGravity" format="enum">
            <enum name="left" value="-1"/>
            <enum name="center" value="0"/>
            <enum name="right" value="1"/>
        </attr>
        <attr name="itemTextColor" format="color"/>
        <attr name="itemTextPaddingLeft" format="dimension"/>
        <!--分割线显示状态-->
        <attr name="itemLineVisible" format="enum">
            <enum name="GONE" value="-1"/>
            <enum name="VISIBLE" value="1"/>
        </attr>
        <!--右边文字-->
        <attr name="itemRightText" format="string"/>
        <attr name="itemRightTextColor" format="color"/>
        <attr name="itemRightTextSize" format="dimension"/>
        <!--右边图标-->
        <attr name="itemRightImg" format="reference"/>
        <attr name="itemRightImgSize" format="dimension"/>
        <attr name="itemRightImgVisible" format="enum">
            <enum name="GONE" value="-1"/>
            <enum name="VISIBLE" value="1"/>
        </attr>
    </declare-styleable>

    <!--底部按钮-->
    <declare-styleable name="ButtonMenu">
        <attr name="bottom_text" format="string"/>
        <attr name="bottom_normal_pic" format="reference"/>
        <attr name="bottom_selected_pic" format="reference"/>
        <attr name="bottom_isAnimation" format="boolean"/>
        <attr name="bottom_icon_size" format="dimension"/>
        <attr name="bottom_sel_textColor" format="color"/>
        <attr name="bottom_unSel_textColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="LimitScrollView">
        <!--显示数量-->
        <attr name="limitCount" format="integer"/>
        <!--滚动速度-->
        <attr name="limitDurationTime" format="integer"/>
        <!--停留时间-->
        <attr name="limitPeriodTime" format="integer"/>
    </declare-styleable>
    
    
</resources>